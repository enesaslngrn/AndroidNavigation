<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_firsts_graph">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.androidnavigation.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.androidnavigation.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.androidnavigation.TestFragment"
        android:label="Test"
        tools:layout="@layout/fragment_test" />

    <include app:graph="@navigation/nav_firsts_graph" />
    <include app:graph="@navigation/nav_seconds_graph" />
    <include app:graph="@navigation/nav_thirds_graph" />
    <include app:graph="@navigation/nav_fourths_graph" />

</navigation>